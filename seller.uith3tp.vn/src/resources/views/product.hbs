                        <input name="img" type="text" placeholder="Hỉnh ảnh sản phẩm">
                        <input name="quantity" type="number" placeholder="Số lượng">
                        <input name="price" type="text" name="" id="" placeholder="Giá">
                        <label for="type">Loại sản phẩm</label>
