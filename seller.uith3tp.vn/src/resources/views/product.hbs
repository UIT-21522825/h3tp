            <p class="create-btn" style="padding: 12px 20px;
            border: 1px solid #0070AE;
            border-radius: 4px;
            cursor: pointer;
            background-color: #0070AE;">+ Thêm sản phẩm</p>
        </div>
        <div class="product__menu">
            <div class="product__menu-item active">Tất cả</div>
            <div class="product__menu-item">Không hợp lệ</div>
        </div>
        <input type="text" placeholder="Tìm sản phẩm" class="product__menu-search">
        <div class="product__list__header">
            <input type="checkbox" style="width: 9%; align-items: center;    margin: auto;">
            <p style="text-align: center;width: 27%;">Tên sản phẩm</p>
            <p style="text-align: center;width: 12%;">Ảnh</p>
            <p style="text-align: center;width: 18%;">Giá</p>
            <p style="text-align: center;width: 18%;">Loại</p>
            <p style="text-align: center;width: 15%;">Số lượng</p>
        </div>
        <table class="product__list__table">
            {{#each product}}
            <tr>
                <td><input type="checkbox"></td>
                <td>{{this.name}}</td>
                <td><img src="{{this.img}}" alt=""></td>
                <td>{{this.price}}</td>
                <td>{{this.type}}</td>
                <td>{{this.quantity}}</td>
            </tr>
            {{/each}}
        </table>
