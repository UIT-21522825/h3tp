<script>
    var productHeaderName = document.querySelectorAll('.product__menu-item');
    productHeaderName.forEach((a)=>{
        a.addEventListener('click',()=>{
            productHeaderName.forEach((a)=>{
                a.classList.remove('active');
            })
            a.classList.add('active');
        })
    })



    var createBtn = document.querySelector('.create-btn');
    var modal =  document.querySelector('.modal');
    var modalBody = document.querySelector('.modal__body')
    // modal show&hide
    function ShowCreateBtn(){
        modal.classList.add('open');
    }
    function HideCreateBtn(){
        modal.classList.remove('open');
    }
    createBtn.addEventListener('click',ShowCreateBtn);
    modal.addEventListener('click',HideCreateBtn);
    modalBody.addEventListener('click',function(event){
        event.stopPropagation()
    })
</script>